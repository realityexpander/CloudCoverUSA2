<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- for must include even if not animated -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- for animation duration -->
        <item name="windowSplashScreenAnimationDuration">250</item>

        <!-- For Android 12 only, the color of the background circle for the splash screen icon. -->
        <item name="windowSplashScreenIconBackgroundColor">@color/freds_blue</item>

        <!-- After splash screen is shown, use the following theme -->
<!--        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>-->
    </style>
</resources>
